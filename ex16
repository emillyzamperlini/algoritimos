altura = float(input("informe a altura : "))
sexo = str(input("informe o sexo, levando em consideração F para feminino e M para masculino: "))

if sexo == 'M' : 
    peso = (72.7 * altura) - 58
    print("peso ideal : {}".format(peso))

if sexo == 'F' : 
    peso = (62.1 * altura) - 44.7
    print("peso ideal : {}".format(peso))